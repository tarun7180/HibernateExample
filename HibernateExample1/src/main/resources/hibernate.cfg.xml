<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.driver_class">oracle.jdbc.driver.OracleDriver</property>
		<property name="hibernate.connection.url">jdbc:oracle:thin:@localhost:1521/xe</property>
		<property name="hibernate.connection.username">tarun</property>
		<property name="hibernate.connection.password">tarun</property>
		<property name="hibernate.dialect">org.hibernate.dialect.Oracle10gDialect</property>
		<property name="hibernate.default_schema">tarun</property>
		<property name="show_sql">true</property>
		<mapping resource="com/tjain/user/DBUser.hbm.xml"/>
	</session-factory>
</hibernate-configuration>